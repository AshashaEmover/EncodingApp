#:import Clipboard kivy.core.clipboard.Clipboard

<LanguageSelectionScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: 'Шифрование на каком языке?'
            font_size: 24

        Button:
            size_hint: 1, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            on_press: root.manager.current = 'english'
            text: 'English'

        Button:
            size_hint: 1, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            on_press: root.manager.current = 'russian'
            text: 'Русский'

<CipherScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        TextInput:
            id: txt_inpt
            multiline: False
            hint_text: 'Введите текст'

        TextInput:
            id: key_inpt
            multiline: False
            hint_text: 'Введите ключ'

        Label:
            text: root.result_txt
            size_hint: 1, 0.2
            font_size: 24
            allow_copy: True

        Button:
            size_hint: 1, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            on_press: root.encrypt()
            text: 'Шифровать'

        Button:
            size_hint: 1, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            on_press: root.decrypt()
            on_release: Clipboard.copy(root.result_txt)
            text: 'Дешифровать'

        Button:
            size_hint: 1, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            on_release: Clipboard.copy(root.txt_to_copy)
            text: 'Копировать результат'